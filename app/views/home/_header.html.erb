<header class="navbar navbar-expand-lg navbar-light" style="background-color: #85de6a;">
    <div class="container-fluid">
           <%= link_to image_tag(asset_pack_path('media/images/logo_fos.png'), class: "header-logo"), root_path, class: "logo nav-link" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Baza de Date
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <%=link_to "Cluburi",     clubs_path,        class: "dropdown-item" %>
                        <%=link_to "Sportivi",    runners_path,      class: "dropdown-item" %>
                        <%=link_to "Competitii",  competitions_path, class: "dropdown-item" %>
                        <%=link_to "Grupe",       groups_path,       class: "dropdown-item" %>
                        <%=link_to "Rezultate",   results_path,      class: "dropdown-item" %>
                        <%=link_to "Indepliniri", entries_path,      class: "dropdown-item" %>
                        <%=link_to "Categorii",   categories_path,   class: "dropdown-item" %>
                        <%=link_to "Clasament National",   competitions_ecn_ranking_path,   class: "dropdown-item" %>
                        <%=link_to "Licențe",   runners_license_path,   class: "dropdown-item" %>
                    </ul>
                </li>
                <% if admin_user? || club_admin?%>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Adauga la Baza de Date
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <% if admin_user? %>
                        <%=link_to "Adauga Club",                    new_club_path,        class: "dropdown-item" %>
                        <% end %>
                        <%=link_to "Adauga Sportiv",    new_runner_path,      class: "dropdown-item" %>
                        <%=link_to "Adauga Competitie", new_competition_path, class: "dropdown-item" %>
                        <%=link_to "Adauga Grupa",      new_group_path,       class: "dropdown-item" %>
                        <%=link_to "Adauga Rezultat",   new_result_path,      class: "dropdown-item" %>
                        <% if admin_user? %>
                        <%=link_to "Adauga Din Fisier", file_results_path,      class: "dropdown-item" %>
                        <% end %>
                    </ul>
                </li>
                <% end %>
                <% if admin_user? %>
                <li class="nav-item">
                    <%=link_to "Actualizează datele", parser_path, class: "nav-link" %>
                </li>
                 <% end %>
                    <li class="nav-item">
                    </li>
            </ul>
            <div class="col-md-3 text-end">
                <% if user_signed_in? %>
                <%=link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary" %>
                <%=link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
                <% else %>
                <%=link_to 'Sign Up', new_user_registration_path, class: "btn btn-success me-2" %>
                <%=link_to 'Sign In', new_user_session_path, class: "btn btn-info" %>
                <% end %>
            </div>
        </div>
    </div>
</header>
