<p id="notice">
    <%= notice %>
</p>
<h1 style="text-align:center; color:green">Categorii</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col" class="sortable" data-sort-by="category_name">
                <%= link_to 'Nume'%>
            </th>
            <th class="sortable" data-sort-by="full_name">
                <%= link_to 'Nume Complet'%>
            </th>
            <th class="sortable" data-sort-by="points">
                <%= link_to 'Puncte' %>
            </th>
            <th class="sortable" data-sort-by="count_runners">
                <%= link_to 'Numar de sportivi'%>
            </th>
            <th colspan="3">Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td>
                <%= category.category_name %>
            </td>
            <td>
                <%= category.full_name %>
            </td>
            <td>
                <%= category.points %>
            </td>
            <td>
                <%= link_to category.runners.count, runners_path(category: category.id) %>
            </td>
            <td>
                <%= link_to 'Arată', category, class: "btn btn-warning btn-sm"%>
            </td>
            <% if admin_user? %>
            <td>
                <%= link_to 'Editează', edit_polymorphic_path(category), class: "btn btn-success btn-sm"%>
            </td>
            <td>
                <%= link_to 'Șterge', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
<br>
<% if admin_user? %>
<%= link_to 'Categorie Nouă', new_category_path, class: "btn btn-info" %>
<% end %>
