<p id="notice"><%= notice %></p>

<h1 style="text-align:center; color:green">Cluburi</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-primary">
     <tr>
      <th scope="col"><%= link_to 'Nume', sort: "club_name"%></th>
      <th><%= link_to 'Teritoriu', sort: "territory" %></th>
      <th><%= link_to 'Reprezentant', sort: "representative" %></th>
      <th><%= link_to 'Email', sort: "email" %></th>
      <th><%= link_to 'Telefon', sort: "phone" %></th>
      <th colspan="3">Acțiuni</th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.club_name %></td>
        <td><%= club.territory %></td>
        <td><%= club.representative %></td>
        <td><%= club.email %></td>
        <td><%= club.phone %></td>
        <td><%= link_to 'Arată', club, class: "btn btn-warning btn-sm"%></td>
        <% if admin_user? || club_admin?(club) %>
          <td><%= link_to 'Editează', edit_polymorphic_path(club), class: "btn btn-success btn-sm"%></td>
          <td><%= link_to 'Șterge', club, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_user? %>
<%= link_to 'Club Nou', new_club_path, class: "btn btn-info" %>
<% end %>
