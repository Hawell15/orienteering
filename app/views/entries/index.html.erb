<p id="notice">
    <%= notice %>
</p>
<h1 style="text-align:center; color:green">Categorii în așteptare</h1>
<%= form_tag(entries_path, method: :get) do %>
  <%= check_box_tag 'status[]', 'confirmed', params[:status]&.include?('confirmed'), id: 'confirmed-checkbox' %>
  <%= label_tag 'confirmed-checkbox', 'Confirmed' %>

  <%= check_box_tag 'status[]', 'unconfirmed', params[:status]&.include?('unconfirmed'), id: 'unconfirmed-checkbox' %>
  <%= label_tag 'unconfirmed-checkbox', 'Unconfirmed' %>

  <%= check_box_tag 'status[]', 'pending', params[:status]&.include?('pending'), id: 'pending-checkbox' %>
  <%= label_tag 'pending-checkbox', 'Pending' %>

  <%= submit_tag 'Filter' %>
<% end %>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                <%= link_to 'Data',  sort: "date" %>
            </th>
            <th>
                <%= link_to 'Sportiv', sort: "runner"%>
            </th>
            <th>
                <%= link_to 'Categoria actuală', sort: "runner"%>
            </th>
            <th>
                <%= link_to 'Categoria indeplinita', sort: "category_id" %>
            </th>
            <th>
                <%= link_to 'Competitia', sort: "competition" %>
            </th>
            <th>
                <%= link_to 'Wre Puncte', sort: "wre_points" %>
            </th>
            <th>
                <%= link_to 'Status', sort: "status"%>
            </th>
            <th colspan="4">Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        <% @entries.each do |entry| %>
        <tr>
            <td>
                <%= link_to entry.date, entry %>
            </td>
            <td>
                <%= link_to "#{entry.runner.runner_name} #{entry.runner.surname} (#{entry.runner.id})", entry.runner  %>
            </td>
                   <td>
                <%= entry.runner.category.category_name %>
            </td>
            <td>
                <%= entry.category.category_name %>
            </td>
            <td>
                <%= link_to "#{entry.result.group.competition.competition_name} (#{entry.result.group.group_name})", entry.result %>
            </td>
            <td>
                <%= entry.result.wre_points %>
            </td>
            <td>
                <%= entry.status %>
            </td>
            <td>
                <%= link_to confirm_entry_path(entry), method: :patch do %>
                  <%= image_tag "/confirm.png", alt: "Approve", size: "35x30" %>
                <% end %>
            </td>
            <td>
                <%= link_to pending_entry_path(entry), method: :patch do %>
                <%= image_tag "/pending.jpeg", alt: "Pending", size: "30x30" %>
                <% end %>
            </td>
            <td>
              <%= link_to reject_entry_path(entry), method: :delete do %>
              <%= image_tag "/reject.jpeg", alt: "Pending", size: "30x30" %>
                <% end %>

            </td>
            <td><%= link_to 'Editează', edit_polymorphic_path(entry), class: "btn btn-success btn-sm"%>

            </td>

        </tr>
        <% end %>
    </tbody>
</table>
<br>
<%= link_to 'New Entry', new_entry_path %>
